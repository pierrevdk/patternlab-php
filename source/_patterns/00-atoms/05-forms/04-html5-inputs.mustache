	<fieldset>
    <div class="field-container"><label for="ic">Color input</label> <input type="color" id="ic" value="#000000"></div>
    <div class="field-container"><label for="in">Number input</label> <input type="number" id="in" min="0" max="10" value="5"></div>
    <div class="field-container"><label for="ir">Range input</label> <input type="range" id="ir" value="10"></div>
    <div class="field-container"><label for="idd">Date input</label> <input type="date" id="idd" value="01-01-1970"></div>
    <div class="field-container"><label for="idm">Month input</label> <input type="month" id="idm" value="01-1970"></div>
    <div class="field-container"><label for="idw">Week input</label> <input type="week" id="idw" value="W01-1970"></div>
    <div class="field-container"><label for="idt">Datetime input</label> <input type="datetime" id="idt" value="01-01-1970T00:00:00Z"></div>
    <div class="field-container"><label for="idtl">Datetime-local input</label> <input type="datetime-local" id="idtl" value="01-01-1970T00:00"></div>
</fieldset>
